---
import styles from "../styles/profile-image.module.scss";
import profileImgDesktop from "../assets/images/oleksii-desktop.png";
import profileImgMobile from "../assets/images/oleksii-mobile.png";
---

<picture>
  <source
    media={`(max-width: ${styles["mobile-image-max-width"]})`}
    srcset={profileImgMobile.src}
    type="image/webp"
    width={profileImgMobile.width}
    height={profileImgMobile.height}
  />
  <source
    media={`(min-width: ${styles["desktop-image-min-width"]})`}
    srcset={profileImgDesktop.src}
    type="image/webp"
    width={profileImgDesktop.width}
    height={profileImgDesktop.height}
  />
  <img
    style={{ width: "100%", height: "auto" }}
    src={profileImgMobile.src}
    width={profileImgMobile.width}
    height={profileImgMobile.height}
    alt="Oleksii Shevtsov"
  />
</picture>
